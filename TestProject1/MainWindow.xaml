<Window x:Class="TestProject1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestProject1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350">
    <Border Grid.Row="1" Padding="25 20">
        <Grid>
            <StackPanel Orientation="Vertical">
                <Label Content="Технологія ADO" HorizontalAlignment="Center" Foreground="#505d6e" FontFamily="fonts/#Gilroy Bold" FontSize="20"/>
                <Button x:Name="IntroButton"  Margin="0 14 0 0" Content="Вступ. Налаштування" Cursor="Hand" Click="IntroButton_Click"/>
                <Button x:Name="AuthButton"  Margin="0 7 0 0" Content="Автентифікація / Реєстрація" Cursor="Hand" Click="AuthButton_Click"/>
                <Button x:Name="CrudButton"  Margin="0 7 0 0" Content="CRUD" Cursor="Hand" Click="CrudButton_Click"/>
                <Button x:Name="EfButton"  Margin="0 7 0 0" Content="Entity Framework" Cursor="Hand" Click="EfButton_Click"/>
                <Button x:Name="EfCrudButton"  Margin="0 7 0 0" Content="EF CRUD" Cursor="Hand" Click="EfCrudButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
